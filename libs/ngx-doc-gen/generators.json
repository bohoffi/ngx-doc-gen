{
  "$schema": "http://json-schema.org/schema",
  "generators": {
    "init": {
      "factory": "./src/generators/init/generator",
      "schema": "./src/generators/init/schema.json",
      "description": "Installs 'ngx-doc-gen' as a dev dependency in your workspace."
    },
    "install": {
      "factory": "./src/generators/install/generator",
      "schema": "./src/generators/install/schema.json",
      "description": "Configures libraries for documentation generation.",
      "aliases": [
        "ng-add"
      ]
    }
  },
  "schematics": {
    "ng-add": {
      "factory": "./src/generators/install/compat",
      "schema": "./src/generators/install/schema.json",
      "description": "Configures libraries for documentation generation.",
      "aliases": [
        "install"
      ]
    }
  }
}
